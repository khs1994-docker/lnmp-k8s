      mode: 0644
      overwrite: true
      contents:
        inline: coreos1
    - path: "/etc/hosts"
      mode: 0644
      overwrite: true
      contents:
        inline: |
          127.0.0.1 localhost
          ::1       localhost
          192.168.57.200 gcr.io registry.k8s.io docker.khs1994.com docker.domain.com
          192.168.57.200 coreos1
    - path: ${K8S_ROOT}/etc/kubernetes/kube-scheduler.config.yaml
      mode: 0644
      contents:
